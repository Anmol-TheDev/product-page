const products = [
  {
    id: 1,
    title: "Lint Remover",
    description: [
    "Say goodbye to lint, fuzz, and pet hair with our premium Lint Remover!",
    "Keep your fabrics looking fresh and new with ease.",
    "Perfect for:",
    "Removing unwanted debris from clothes.",
    "Cleaning upholstery and other fabric surfaces.",
    "A must-have tool for maintaining a polished and tidy appearance."
    ],
    img: "public/images/img2.webp",
    price: "Out of stock",
  },
  {
    id: 2,
    title: "Door Guard",
    description: [
      "Double-sided foam core design for superior draft blocking",
      "Slides smoothly under doors with up to 1-inch gap clearance",
      "Machine washable outer cover in premium microfiber material",
      "Reduces energy bills by preventing heat and AC loss",
      "Sound dampening technology - reduces noise by up to 30%",
      "Easy installation with no tools required - just slide and secure"
    ],
    img: "public/images/img3.webp",
    price: "119 ₹",
  },
  {
    id: 3,
    title: "Heavy-Duty Adhesive Wall Hooks",
    description: [
      "Industrial-strength adhesive holds up to 15kg per hook",
      "Waterproof and humidity-resistant - perfect for bathrooms",
      "Leaves no residue when removed - safe for all wall types",
      "Stainless steel construction prevents rust and corrosion",
      "Package includes surface preparation wipes for optimal adhesion",
      "Versatile design works on tiles, wood, glass, and painted surfaces"
